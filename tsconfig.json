{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "paths": {
    ".prisma/client": ["./node_modules/.prisma/client"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}