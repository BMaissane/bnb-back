{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["node", "express"],
    "paths": {
      "@prisma/client": ["./node_modules/@prisma/client"]
    }
  },
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*", "scripts", "test/**/*"],
  "exclude": ["node_modules"]
}