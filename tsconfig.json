{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
     "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["node", 
    "express",
     "jest"],
    "paths": {
      "@prisma/client": ["./node_modules/@prisma/client"],
       "@/*": ["src/*"]
    }
  }, "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "ts-node": {
    "esm": false,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*", "src/scripts", "src/test", "src/test/jest.setup.ts", "jest.config.ts"],
  "exclude": ["node_modules"]
}